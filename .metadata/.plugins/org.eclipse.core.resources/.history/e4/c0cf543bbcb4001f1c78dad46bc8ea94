// Player.java
package model;

public class Player {
    private int score;
    private int number;

    public Player(int playerNumber) {
        this.number = playerNumber;
        this.score = 0;
    }

    public void addScore(int points) {
        score += points;
    }

    public int getScore() {
        return score;
    }

    public int getNumber() {
        return number;
    }
}